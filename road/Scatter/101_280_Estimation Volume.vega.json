{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A scatterplot with a regression line",
    "data": {
        "url": "Daily_all_data.csv"
    },
    "transform": [
        {
            "filter": "datum['Loc Type'] == '101/280'"
        }
    ],
