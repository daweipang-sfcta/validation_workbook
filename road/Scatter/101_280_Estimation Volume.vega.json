                        "type": "nominal",
                        "title": "B"
                    },
                    {
                        "field": "Location",
                        "type": "nominal",
                        "title": "Location"
                    },
                    {
                        "field": "Road",
                        "type": "nominal",
                        "title": "Road"
                    },
                    {
                        "field": "Dir",
                        "type": "nominal",
                        "title": "Dir"
                    }
                ]
            }
        },
        {
            "mark": {
                "type": "text",
                "align": "left",
                "baseline": "bottom",
                "dx": 5,
                "dy": -5
            },
            "data": {
                "values": [
                    {
                        "text": "y = 1.10x + 1568.04"
                    }
                ]
            },
            "encoding": {
                "x": {
                    "value": 0
                },
                "y": {
                    "value": 0
                },
                "text": {
                    "field": "text",
                    "type": "nominal"
                },
